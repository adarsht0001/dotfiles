// -*- mode: jsonc -*-
{
  "layer": "top",
  "position": "top",
  "spacing": 0,
  "height": 1,
  "margin-top": 0,
  "margin-right": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  "modules-left": [
    "custom/theme",
    "group/utility",
    "custom/playerctl#backward",
    "custom/playerctl#play",
    "custom/playerctl#foward",
    "custom/playerlabel"
  ],
  "modules-center": ["custom/weather", "hyprland/workspaces", "custom/swaync"],
  "modules-right": [
    "tray",
    "battery",
    "pulseaudio",
    "custom/todo",
    "network",
    "clock"
  ],

  /*----------Hyprland Workspace----------*/
  "hyprland/workspaces": {
    "format": "{name}",
    "on-click": "activate",
    "warp-on-scroll": false,
    "all-outputs": true,
    "on-scroll-down": "hyprctl dispatch workspace e+1",
    "on-scroll-up": "hyprctl dispatch workspace e-1"
  },
  /*-----------Weather---------------*/
  "custom/weather": {
    "format": "{}",
    "format-alt": "{alt}: {}",
    "format-alt-click": "click",
    "interval": 3600,
    "return-type": "json",
    "exec": "$HOME/.config/waybar/scripts/Weather.py",
    //"exec": "$HOME/.config/hypr/UserScripts/Weather.sh",
    //"exec-if": "ping wttr.in -c1",
    "tooltip": true
  },
  /*-----------SwayNC----------------*/

  "custom/swaync": {
    "tooltip": true,
    "tooltip-format": "Left Click: Launch Notification Center\nRight Click: Do not Disturb",
    "format": "{} {icon} ",
    "format-icons": {
      "notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "none": "ÔÇ¢",
      "dnd-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-none": "Ôá∑",
      "inhibited-notification": "ÔÇ¢<span foreground='red'><sup>ÔëÑ</sup></span>",
      "inhibited-none": "ÔÇ¢",
      "dnd-inhibited-notification": "Ôá∑<span foreground='red'><sup>ÔëÑ</sup></span>",
      "dnd-inhibited-none": "Ôá∑"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

  /*------------Theme------------------*/
  "custom/theme": {
    "format": "Û∞£á",
    "tooltip": false,
    "on-click": "notify-send 'Theme toggle clicked'"
  },
  /*------------TODO------------------*/
  "custom/todo": {
    "exec": "~/.config/waybar/scripts/todo.sh",
    "return-type": "json",
    "format": "{} ÔÇÆ",
    "format-icons": {
      "default": "Û∞óì",
      "urgent": "Û∞óì"
    },
    "format-default": "Û∞óì",
    "on-click": "wezterm -e nvim ~/todo.txt",
    "interval": 5
  },
  /*--------------Network-----------------*/
  "network": {
    "format-disconnected": "Û∞ñ™ 0% ",
    "format-ethernet": "Û∞àÄ 100% ",
    "format-linked": "{ifname} (No IP)",
    "format-wifi": "Ôá´ {signalStrength}%",
    "tooltip-format": "Connected to {essid} {ifname} via {gwaddr}",
    "on-click": "kitty --title KittyNmtui sh -c  'sleep 0.1; nmtui'"
  },
  /*---------------Battery-------------*/
  "battery": {
    "format": "{icon} {capacity}%",
    "format-alt": "{icon} {time} ",
    "format-charging": "Ôá¶ {capacity}%",
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
    "format-plugged": "Ôá¶ {capacity}% ",
    "format-time": "{H} h {m} min",
    "states": {
      "critical": 15,
      "good": 95,
      "warning": 30
    }
  },
  /*---------------Pulseaudio------------*/
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-icons": {
      "default": ["Û∞ïø", "Û∞ñÄ", "Û∞ïæ"]
    },
    "format-muted": "Û∞ùü",
    "on-click": "pavucontrol",
    "scroll-step": 5
  },
  /*------------Tray--------------------*/
  "tray": {
    "icon-size": 20,
    "spacing": 8
  },
  /*------------Clock------------------*/
  "clock": {
    "format": "Û∞•î {:%a %b %d %I:%M %p (%Z)}",
    "interval": 1,
    "timezone": "Asia/Kolkata",
    "timezones": ["Asia/Kolkata", "CET"],
    "tooltip-format": "<span>{calendar}</span>",
    "calendar": {
      "mode": "month",
      "format": {
        "months": "<span color='#ff6699'><b>{}</b></span>",
        "days": "<span color='#cdd6f4'><b>{}</b></span>",
        "weekdays": "<span color='#7CD37C'><b>{}</b></span>",
        "today": "<span color='#ffcc66'><b>{}</b></span>"
      }
    },
    "actions": {
      "on-click": "tz_up",
      "on-scroll-up": "shift_up",
      "on-scroll-down": "shift_down"
    }
  },
  /*-----------Cpu, Memory, Colorpicker, Temperature, Idle-inhibitor------*/
  "cpu": {
    "format": "{usage}% Ôãõ",
    "tooltip": true
  },
  "memory": {
    "format": "{}% ÓøÖ"
  },
  "temperature": {
    "critical-threshold": 80,
    "format": "{temperatureC}¬∞C {icon} ",
    "format-icons": ["Ôù´", "Ôãâ", "Ôù©"]
  },
  "custom/colorpicker": {
    "format": "{} Ôáª",
    "tooltip-format": "Color Picker",

    "on-click": "hyprpicker -a"
  },
  "power-profiles-daemon": {
    "format": "{icon}",
    "tooltip-format": "‚ö° Current Power Profile: {profile}\n\nüñ• Driver: {driver}",
    "tooltip": true,
    "format-icons": {
      "default": "Û∞ö•", // Battery/bolt hybrid (neutral)
      "performance": "Û∞ìÖ", // Speedometer
      "balanced": "Û∞æÖ", // Yin-yang style balanced icon
      "power-saver": "Û∞õ™" // Leaf with a plug
    }
  },
  /*----------------Expand---------------*/
  "custom/expand": {
    "format": "ÔÜí",
    "tooltip": true,
    "tooltip-format": "Click to show utilities"
  },

  /*-----------Group-------------------*/
  "group/utility": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 600,
      "children-class": "child-utility",
      "transition-left-to-right": true,
      "click-to-reveal": true
    },
    "modules": [
      "custom/expand",
      "cpu",
      "memory",
      "power-profiles-daemon",
      "custom/colorpicker",
      "temperature"
    ]
  },
  /*---------------Playerctl---------------*/
  "custom/playerctl#backward": {
    "format": "Û∞ô£ ",
    "on-click": "playerctl previous",
    "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 5%-",
    "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 5%+",
    "tooltip": false
  },
  "custom/playerctl#foward": {
    "format": "Û∞ô° ",
    "on-click": "playerctl next",
    "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 5%-",
    "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 5%+",
    "tooltip": false
  },
  "custom/playerctl#play": {
    "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "format": "{icon}",
    "format-icons": {
      "Paused": "<span>ÔÖÑ </span>",
      "Playing": "<span>Û∞è• </span>",
      "Stopped": "<span>ÔÖÑ </span>"
    },
    "on-click": "playerctl play-pause",
    "on-scroll-down": "wpctl set-volume @DEFAULT_SINK@ 5%-",
    "on-scroll-up": "wpctl set-volume @DEFAULT_SINK@ 5%+",
    "return-type": "json"
  },
  "custom/playerlabel": {
    "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "format": "<span>Û∞éà {} Û∞éà</span>",
    "max-length": 40,
    "on-click": "",
    "return-type": "json"
  }
}
