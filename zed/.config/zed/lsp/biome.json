{
    "files": {
        "includes": [
            "*.js",
            "*.json",
            "*.ts",
            "*.tsx",
            "*.jsx",
            "*.mjs",
            "*.cjs"
        ]
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": true,
        "ignore": [],
        "attributePosition": "auto",
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineWidth": 80,
        "lineEnding": "lf",
        "semicolons": "always"
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "always",
            "bracketSameLine": false,
            "bracketSpacing": true,
            "jsxQuoteStyle": "double",
            "quoteProperties": "asNeeded",
            "semicolons": "always",
            "trailingCommas": "all"
        }
    },
    "json": {
        "formatter": {
            "trailingCommas": "none"
        }
    }
}