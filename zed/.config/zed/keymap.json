// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
	{
		"context": "Editor && VimControl && !VimWaiting && !menu",
		"bindings": {
			"space g g": [
				"task::Spawn",
				{ "task_name": "LazyGit", "reveal_target": "center" }
			],
			"space f": "workspace::ToggleZoom",
			"space g b": "git::CheckoutBranch",
			"space t": "terminal_panel::ToggleFocus",
			"space space": "file_finder::Toggle",
			"space h i": "editor::ToggleInlayHints",
			"g r": "editor::FindAllReferences",
			"shift-k": "editor::Hover",
			"space l a": "editor::ToggleCodeActions",
			"space l r": "editor::Rename",
			"space l f": "editor::Format",
			"space l l": "diagnostics::Deploy",
			"g c c": "editor::ToggleComments",
			"space o": "tab_switcher::Toggle",
			"space e": "workspace::ToggleLeftDock",
			"space p": "outline::Toggle",
			"space v": "editor::GoToDefinitionSplit"
		}
	},
	{
		"context": "Terminal",
		"use_key_equivalents": true,
		"bindings": {
			// Key-bindings for being in terminal go to editor
			"space f f": "file_finder::Toggle",
			"space g e": "terminal_panel::ToggleFocus"
		}
	},
	{
		"context": "Workspace",
		"bindings": {
			// "shift shift": "file_finder::Toggle"
		}
	},
	{
		"context": "Editor && vim_mode == insert && !VimWaiting && !menu",
		"bindings": {
			"j k": "vim::NormalBefore"
		}
	},
	{
		"context": "Editor && vim_mode == normal",
		"bindings": {
			"space space": "file_finder::Toggle",
			"shift l": "pane::ActivateNextItem",
			"shift h": "pane::ActivatePreviousItem",
			"space v": "pane::SplitVertical",
			"space s": "pane::SplitHorizontal",
			"space w d": "pane::CloseActiveItem",
			"space w h": "workspace::ActivatePreviousPane",
			"space w l": "workspace::ActivatePreviousPane",
			"space e": "workspace::ToggleRightDock"
		}
	},
	{
		"context": "Workspace && not_editing",
		"bindings": {
			"space e": "workspace::ActivateNextWindow"
			// "shift shift": "file_finder::Toggle"
		}
	},
	{
		"context": "Editor",
		"bindings": {
			// "j k": ["workspace::SendKeystrokes", "escape"]
		}
	},
	{
		"context": "!Editor && TabSwitcher",
		"bindings": {
			"d": "tab_switcher::CloseSelectedItem",
			"j": ["workspace::SendKeystrokes", "down"],
			"k": ["workspace::SendKeystrokes", "up"]
		}
	}
]
