{
	"active_pane_modifiers": {
		"border_size": 0.5
	},
	"bottom_dock_layout": "right_aligned",
	"agent_font_size": 13,
	"auto_indent": true,
	"auto_indent_on_paste": true,
	// TODO: need to add the required and mandatory extensions
	"auto_install_extensions": {
		"html": true,
		"VSCode Icons": true
	},
	"autosave": "on_window_change",
	"autoscroll_on_clicks": true,
	"auto_signature_help": true,
	"show_signature_help_after_edits": true,
	"auto_update": true,
	"buffer_font_family": "JetBrains Mono",
	"buffer_font_fallbacks": ["Zed Plex Mono", "MesloLGS NF"],
	"buffer_font_size": 12,
	"buffer_line_height": "comfortable",
	"current_line_highlight": "all",
	"cursor_blink": false,
	"cursor_shape": "bar",
	"hide_mouse": "on_typing",
	"snippet_sort_order": "top",
	"scrollbar": {
		"show": "never"
	},
	"tabs": {
		"file_icons": true,
		"git_status": true,
		"show_close_button": "hover",
		"show_diagnostics": "all"
	},
	"toolbar": {
		"breadcrumbs": true,
		"quick_actions": true,
		"selections_menu": true,
		"agent_review": true,
		"code_actions": true
	},
	"enable_language_server": true,
	"ensure_final_newline_on_save": true,
	"expand_excerpt_lines": 5,
	"status_bar": {
		"active_language_button": true,
		"cursor_position_button": true
	},
	"global_lsp_settings": {
		"button": true
	},
	"lsp": {
		"biome": {
			"settings": {
				"config_path": "~/.config/zed/lsp/biome.json",
				"require_config_file": true,
				"code_actions_on_format": {
					"source.fixAll.biome": true,
					"source.organizeImports.biome": true
				}
			}
		},
		"eslint": {
			"settings": {
				"codeActionOnSave": {
					"rules": ["import/order", "import/first", "import/no-duplicates"]
				}
			}
		},
		"typescript-language-server": {
			"initialization_options": {
				"preferences": {
					"includeInlayParameterNameHints": "all",
					"includeInlayFunctionParameterTypeHints": true,
					"includeInlayVariableTypeHints": true,
					"includeInlayPropertyDeclarationTypeHints": true,
					"includeInlayFunctionLikeReturnTypeHints": true,
					"includeInlayEnumMemberValueHints": true,
					"importModuleSpecifierPreference": "shortest",
					"quotePreference": "single"
				},
				"tsserver": {
					"maxTsServerMemory": 8192
				}
			}
		}
	},
	"lsp_highlight_debounce": 50,
	"features": {
		"edit_prediction_provider": "zed"
	},
	"format_on_save": "on",
	"formatter": "language_server",
	"file_types": {
		"C++": ["c"],
		"TOML": ["MyLockFile"],
		"Dockerfile": ["Dockerfile*"]
	},
	"diagnostics": {
		"button": true,
		"include_warnings": true,
		"lsp_pull_diagnostics": {
			"enabled": true,
			"debounce_ms": 50
		},
		"inline": {
			"enabled": true,
			"update_debounce_ms": 150,
			"padding": 2,
			"min_column": 0,
			"max_severity": null
		}
	},
	"git": {
		"git_gutter": "tracked_files",
		"gutter_debounce": 100,
		"inline_blame": {
			"enabled": true,
			"delay_ms": 10,
			"min_column": 0,
			"padding": 5,
			"show_commit_summary": false
		},
		"hunk_style": "unstaged_hollow"
	},
	"hard_tabs": true,
	"indent_guides": {
		"enabled": true,
		"line_width": 1,
		"active_line_width": 1,
		"coloring": "indent_aware",
		"background_coloring": "disabled"
	},
	"image_viewer": {
		"unit": "decimal"
	},
	"inlay_hints": {
		"enabled": true,
		"show_type_hints": true,
		"show_parameter_hints": true,
		"show_other_hints": true,
		"show_background": false,
		"edit_debounce_ms": 700,
		"scroll_debounce_ms": 50,
		"toggle_on_modifiers_press": null
	},
	// Theme config and styles
	"icon_theme": {
		"light": "VSCode Icons (Dark)",
		"dark": "VSCode Icons (Dark)"
	},
	"theme": "Tokyo Night",
	"ui_font_size": 12,
	"ui_font_family": "JetBrains Mono",
	// language specific config
	"languages": {
		"TypeScript": {
			"tab_size": 2,
			"formatter": "prettier",
			"language_servers": ["typescript-language-server", "eslint", "vtsls"],
			"code_actions_on_format": {
				"source.organizeImports": true,
				"source.fixAll.eslint": true,
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"TSX": {
			"tab_size": 2,
			"formatter": "prettier",
			"language_servers": [
				"typescript-language-server",
				"eslint",
				"tailwindcss-language-server"
			]
		},
		"JSONC": {
			"tab_size": 2,
			"formatter": "prettier"
		},
		"JSON": {
			"tab_size": 2,
			"formatter": "prettier"
		},
		"JSDoc": {
			"tab_size": 2,
			"formatter": "prettier",
			"language_servers": ["typescript-language-server", "eslint"]
		},
		"JavaScript": {
			"tab_size": 2,
			"formatter": "prettier",
			"language_servers": ["typescript-language-server", "eslint"],
			"code_actions_on_format": {
				"source.organizeImports": true,
				"source.fixAll.eslint": true,
				"source.fixAll.biome": true,
				"source.organizeImports.biome": true
			}
		},
		"HTML": {
			"tab_size": 2,
			"formatter": "prettier",
			"language_servers": ["eslint"],
			"code_actions_on_format": {
				"source.fixAll.eslint": true
			}
		},
		"CSS": {
			"formatter": "prettier",
			"language_servers": ["eslint"]
		}
	},
	"line_indicator_format": "long",
	"profiles": {
		// TODO: custom font size for the different laptops
		"macbook": {},
		"arch": {}
	},
	"file_finder": {
		"modal_max_width": "small"
	},
	"relative_line_numbers": true,
	"scroll_beyond_last_line": "off",
	"use_smartcase_search": true,
	"completions": {
		"words": "enabled",
		"words_min_length": 3,
		"lsp": true,
		"lsp_fetch_timeout_ms": 0,
		"lsp_insert_mode": "insert"
	},
	"show_whitespaces": "all",
	"soft_wrap": "bounded",
	"terminal": {
		"minimum_contrast": 60,
		"font_size": 12,
		"font_family": "MesloLGS NF"
	},
	"title_bar": {
		"show_branch_icon": true,
		"show_branch_name": true,
		"show_project_items": true,
		"show_onboarding_banner": true,
		"show_user_picture": true,
		"show_sign_in": true,
		"show_menus": true
	},
	"vim_mode": true,
	// panel configs
	"project_panel": {
		"dock": "right",
		"default_width": 250,
		"auto_fold_dirs": false,
		"indent_size": 10,
		"hide_root": true
	},
	"collaboration_panel": {
		"button": true,
		"dock": "right",
		"default_width": 250
	},
	"git_panel": {
		"button": true,
		"dock": "right",
		"default_width": 250,
		"status_style": "label_color",
		"fallback_branch_name": "main",
		"collapse_untracked_diff": false
	},
	"outline_panel": {
		"button": true,
		"dock": "right",
		"default_width": 250,
		"auto_fold_dirs": false,
		"indent_size": 10
	},
	"chat_panel": {
		"button": "when_in_call",
		"default_width": 250,
		"dock": "right"
	},
	"unnecessary_code_fade": 0.7,
	"agent": {
		"default_view": "text_thread",
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4"
		},
		"inline_alternatives": [
			{
				"provider": "zed.dev",
				"model": "gpt-4o"
			}
		],
		"play_sound_when_agent_done": true
	}
